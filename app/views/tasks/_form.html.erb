<%= form_for(@task) do |f| %>

  <% if @task.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
  	<%= f.select :status, {"未着手" => 0, "進行中" => 1, "完了" => 2} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
