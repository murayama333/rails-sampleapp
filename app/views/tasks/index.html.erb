<h1>タスク一覧</h1>
<div>
	<ul>
	<% @tasks.each do |task|%>
		<li>
			<%= link_to task.title, edit_task_path(task) %> 
			<%= link_to "削除", task_path(task), 
			                 method: :delete,
							 data: { confirm: '削除しますか？' }%>
		</li>
	<% end %>
	</ul>
</div>
<%= link_to "新規登録", new_task_path %>

