<h1>タスク登録</h1>
<%= form_for(@task) do |f| %>

  <% if @task.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :memo %><br>
    <%= f.text_area :memo %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
  	<%= f.select :status, {"未完了" => 0, "完了" => 1}%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
<%= link_to '戻る', tasks_path %>
